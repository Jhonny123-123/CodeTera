<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeTera"
        tools:targetApi="31">
        <activity
            android:name=".ui.coursedetails.CourseDetailsActivity"
            android:exported="true"
            android:label="@string/course_details"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
        <activity
            android:name=".ui.paymentconfirmation.PaymentConfirmationActivity"
            android:exported="true"
            android:label="@string/payment_confirmation"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
        <activity
            android:name=".ui.about.AboutActivity"
            android:exported="true"
            android:label="@string/action_about"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="true"
            android:label="@string/action_settings"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
        <activity
            android:name=".ui.addcard.AddCardActivity"
            android:exported="true"
            android:label="@string/add_card"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
        <activity
            android:name=".ui.payment.PaymentActivity"
            android:exported="true"
            android:label="@string/payment_options"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
        <activity
            android:name=".ui.course.CourseActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CodeTera.NoActionBar" />
    </application>

</manifest>